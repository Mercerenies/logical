
operator  infix || :  left 10.
operator  infix && :  left 20.
operator  infix  = :  left 30.
operator  infix =: :  left 30.
operator  infix  < :  left 40.
operator  infix  > :  left 40.
operator  infix <= :  left 40.
operator  infix >= :  left 40.
operator  infix == :  left 40.
operator  infix != :  left 40.
operator  infix :: : right 60.
operator  infix  + :  left 70.
operator  infix  - :  left 70.
operator prefix  - : right 70.
operator  infix  * :  left 80.
operator  infix  / :  left 80.

false:
  fail.

true.

repeat.
repeat:
  repeat.

`=`(A, A).

once(F):
  if(F, true, false).

not(F):
  if(F, false, true).

ignore(F):
  if(F, true, true).

A && B: {
  call(A);
  call(B);
}.

A || B:
  call(A).
A || B:
  call(B).

# Comparison operators
A <  B: guard(A <  B).
A >  B: guard(A >  B).
A <= B: guard(A <= B).
A >= B: guard(A >= B).
A == B: guard(A == B).
A != B: guard(A != B).

# List predicates
map(_, []).
map(F, X :: XS): {
  call(F, X);
  map(F, XS);
}.

map(_, [], []).
map(F, X :: XS, Y :: YS): {
  call(F, X, Y);
  map(F, XS, YS);
}.

map(_, [], [], []).
map(F, X :: XS, Y :: YS, Z :: ZS): {
  call(F, X, Y, Z);
  map(F, XS, YS, ZS);
}.

map(_, [], [], [], []).
map(F, X :: XS, Y :: YS, Z :: ZS, T :: TS): {
  call(F, X, Y, Z, T);
  map(F, XS, YS, ZS, TS);
}.

append([], YS, YS).
append(X :: XS, YS, X :: ZS):
  append(XS, YS, ZS).

filter(_, [], []).
filter(F, X :: XS, YS):
  if(
    call(F, X),
    { YS = Z :: ZS; filter(F, XS, ZS); },
    { filter(F, XS, YS); }
  ).

concat_map(_, [], []).
concat_map(F, X :: XS, YS): {
  call(F, X, YS1);
  append(YS1, YS2, YS);
  concat_map(F, XS, YS2);
}.